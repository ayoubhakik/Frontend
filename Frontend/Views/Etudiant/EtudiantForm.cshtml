@model Frontend.Models.Etudiant
@{
                /**/

                ViewData["Title"] = "Ajouter un etudiant";
}
<br /><br />
@using (Html.BeginForm("Save", "Etudiant", FormMethod.Post, new { @class = "navbar-form", enctype = "multipart/form-data" }))
{
<div class="form-group">
    @Html.LabelFor(e => e.nom, new { @class = "control-label" })
    @Html.TextBoxFor(e => e.nom, new { @class = "form-control" })
    @Html.ValidationMessageFor(e => e.nom, "", new { @class = "text-danger" })
</div>
<div class="form-group">
    @Html.LabelFor(e => e.prenom, new { @class = "control-label" })
    @Html.TextBoxFor(e => e.prenom, new { @class = "form-control" })
    @Html.ValidationMessageFor(e => e.prenom, "", new { @class = "text-danger" })
</div>
<div class="form-group">
    @Html.LabelFor(e => e.prenom, new { @class = "control-label" })
    <select name="id_filiere">
        @{
            foreach (var f in ViewBag.filieres)
            {
                <option value="@f.id_filiere">@f.nom_filiere</option>
            }
        }
    </select>
</div>

<button type="submit" class="btn btn-success">Ajouter</button>

 }